Category:            Web

executable todo-app
  main-is:             Main.hs
  default-language:    Haskell2010
  hs-source-dirs:      app
  build-depends:       base >= 4.14 && < 4.16,
                       base-compat >= 0.11 && < 0.12,
                       scotty >= 0.12 && < 0.13
  GHC-options:         -Wall -threaded
